{
  "extends": [
    "tslint:latest",
    "tslint-react"
  ],
  "rules": {
  "ter-indent": [
      4,
      {
        "SwitchCase": 1
      }
    ],
    "jsdoc-format": false,
    "no-trailing-whitespace": false,
    "semicolon": [true, "always"],
    "no-submodule-imports": [false],
    "interface-name": [false],
    "prefer-object-spread": false,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single"],
    "jsx-no-lambda": true //https://stackoverflow.com/questions/36677733/why-shouldnt-jsx-props-use-arrow-functions-or-bind
  }
}
